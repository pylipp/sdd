#!/usr/bin/env bash

# Main executable of the sdd program

SCRIPTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

# shellcheck source=lib/sdd/framework/utils.bash
source "$SCRIPTDIR"/../lib/sdd/framework/utils.bash

SDD_INSTALL_PREFIX=${SDD_INSTALL_PREFIX:-$HOME/.local}
export SDD_INSTALL_PREFIX
mkdir -p "$SDD_INSTALL_PREFIX"/bin

SDD_DATA_DIR=${XDG_DATA_DIR:-$HOME/.local/share}/sdd
export SDD_DATA_DIR
mkdir -p "$SDD_DATA_DIR"/apps

main() {
    local command=$1
    local exit_code=0

    case "$command" in
    install)
        shift
        utils_install "$@"
        exit_code=$?
        ;;
    upgrade)
        shift
        utils_upgrade "$@"
        exit_code=$?
        ;;
    uninstall)
        shift
        utils_uninstall "$@"
        exit_code=$?
        ;;
    list)
        shift
        utils_list "$@"
        exit_code=$?
        ;;
    -h | --help)
        utils_usage
        ;;
    -V | --version)
        utils_version
        exit_code=$?
        ;;
    ?*)
        printf 'Unknown command "%s"\n' "$command" >&2
        exit_code=127
        ;;
    *)
        utils_usage
        ;;
    esac

    exit $exit_code
}

main "$@"
